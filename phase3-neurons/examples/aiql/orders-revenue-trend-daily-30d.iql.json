{
  "title": "Orders: revenue trend (daily, 30d)",
  "entity": "orders",
  "intent": {
    "ask": "trend",
    "metric": {
      "op": "sum",
      "target": "orders.total_amount"
    }
  },
  "iql": {
    "ask": "trend",
    "metric": {
      "op": "sum",
      "target": "orders.total_amount"
    },
    "timeWindow": {
      "type": "relative",
      "period": "last_30d"
    },
    "bucket": {
      "on": "orders.created_at",
      "grain": "day"
    },
    "orderBy": [
      {
        "expr": "bucket",
        "dir": "asc"
      }
    ]
  }
}