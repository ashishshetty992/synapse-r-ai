{
  "name": "nauvra-synapse-r",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @nauvra/http dev",
    "dev:http": "pnpm --filter @nauvra/http dev",
    "seed": "ALLOW_SEED=true curl -s -X POST localhost:4000/seed -H 'content-type: application/json' -d '{}'",
    "test": "vitest --run",
    "test:unit": "vitest run --reporter=default",
    "test:e2e": "vitest run apps/http/test/*.spec.ts",
    "test:update": "vitest -u",
    "coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=default",
    "docker:test": "docker compose -f ops/docker-compose.yml up -d && sleep 5 && pnpm test && docker compose -f ops/docker-compose.yml down",
    "validate:examples": "node ops/validate-examples.js",
    "generate:aiql": "curl -s -X POST localhost:5050/generate -H 'x-api-key: SYNAPSE@2025' -H 'content-type: application/json' -d '{\"perEntity\":5,\"outDir\":\"phase3-neurons/examples/aiql\",\"writeFiles\":true,\"writeCoverage\":true,\"strict\":true}' | jq '{total, written, coverageFile}'",
    "validate:aiql": "node ops/validate-examples.js phase3-neurons/examples/aiql phase3-neurons/examples/aiql/_coverage.json",
    "regen:aiql": "npm run generate:aiql && npm run validate:aiql",
    "feedback:demo": "make feedback-demo",
    "eval:last": "make eval",
    "train": "make trainer-run",
    "trainer:activate": "node -e \"console.log('Use: make trainer-activate CKPT=...')\""
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples"
  ],
  "devDependencies": {
    "@types/node": "^22.18.6",
    "typescript": "^5.5.4",
    "vitest": "^2.1.9"
  }
}